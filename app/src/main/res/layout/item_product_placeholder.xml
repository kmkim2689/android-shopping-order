<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_placeholder_product"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginVertical="12dp"
        android:layout_marginEnd="6dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_placeholder_name"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="@id/iv_placeholder_product"
        app:layout_constraintStart_toStartOf="@id/iv_placeholder_product"
        app:layout_constraintTop_toBottomOf="@id/iv_placeholder_product" />

    <ImageView
        android:id="@+id/iv_placeholder_price"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="@id/iv_placeholder_product"
        app:layout_constraintStart_toStartOf="@id/iv_placeholder_product"
        app:layout_constraintTop_toBottomOf="@id/iv_placeholder_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
